<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team5.zzoom.dao.AdminInquiryDAO">
		
	<!-- 데이터 갯수 -->
	<select id="getCount" resultType="int">
		select count(*) from inquiry
	</select>

	<!-- 문의목록 -->
	<select id="getInquirylist" parameterType="int"  resultType="adminInquiry">
		select * from inquiry order by inquiry_id desc limit  #{start}, 10
	</select>
	
	<!-- 문의 상세페이지 -->
	<select id="getInquiry" parameterType="int" resultType="adminInquiry">
		select * from inquiry where inquiry_id=#{inquiry_id}
	</select>
	
	<select id="getReply" parameterType="int" resultType = "adminReply">
		select * from reply where inquiry_id=#{inquiry_id}
	</select>

</mapper>