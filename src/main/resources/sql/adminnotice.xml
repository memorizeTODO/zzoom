<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team5.zzoom.dao.AdminNoticeDAO">

	<!-- 데이터 갯수 -->
	<select id="getCount" resultType="int">
		select count(*) from notice
	</select>

	<!-- 공지사항 목록 -->
	<select id="getNoticelist" parameterType="int"  resultType="adminNotice">
		select * from notice order by notice_id desc limit  #{start}, 10
	</select>
	
	<!-- 공지사항 상세페이지 -->
	<select id="getNotice" parameterType="int"  resultType="adminNotice">
		select * from notice where notice_id=#{notice_id}
	</select>
	
	<!-- 공지사항 글작성 -->
	<insert id="insert" parameterType="adminNotice">
		insert into notice(notice_subject, notice_content, notice_date, notice_count)
		values(#{notice_subject}, #{notice_content}, now(), 0)
	</insert>
	
	<!-- 공지사항 글수정 -->
	<update id="update" parameterType="adminNotice">
		update notice set notice_subject=#{notice_subject}, notice_content=#{notice_content}
		where notice_id=#{notice_id}
	</update>

	<!-- 공지사항 글삭제 -->
	<delete id="delete" parameterType="adminNotice">
		delete from notice where notice_id=#{notice_id}
	</delete>

</mapper>